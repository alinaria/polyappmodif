            </LinearLayout>

            <FrameLayout
                android:id="@+id/contentEvents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

            </FrameLayout>
        </FrameLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>